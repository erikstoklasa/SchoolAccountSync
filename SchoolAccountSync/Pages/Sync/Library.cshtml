@page
@model SchoolAccountSync.Pages.Sync.LibraryModel
@{
    ViewData["Title"] = "Knihovna synchronizace";
}
<h1>Knihovna synchronizace</h1>
@if (Model.ErrorMessage.Length > 0)
{
    <div class="alert alert-danger my-1" role="alert">
        @Model.ErrorMessage
    </div>
}
<p>Po synchronizaci budou mít všichni uživatelé aktivní účty v knihovně.</p>
<form asp-page-handler="Synchronize" method="post">
    <input class="button-primary mt-2" type="submit" value="Synchronizovat s knihovnou" />
</form>